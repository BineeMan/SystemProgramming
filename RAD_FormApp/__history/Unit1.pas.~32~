  Height:= StrToInt(TextBox_Height.Text);
  MessageBox(Form1.Handle, PChar( 'ok' ), PChar('asd'), MB_OK);

  DrawCallbackLocal := DrawCallback;
  MessageBox(Form1.Handle, PChar( 'ok' ), PChar('asd'), MB_OK);

  res := DrawCallbackLocal(PWideChar(filePath), Width, Height, MyHbitmap);
   MessageBox(Form1.Handle, PChar( 'ok' ), PChar('asd'), MB_OK);


