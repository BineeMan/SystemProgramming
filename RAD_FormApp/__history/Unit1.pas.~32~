procedure TForm1.Button1Click(Sender: TObject);
var
    Width: Integer;
    Height: Integer;
    filePath: String;
    Bitmap: TBitmap;
    MyHbitmap: HBITMAP;
    DrawCallbackLocal: PDrawCallback1;
